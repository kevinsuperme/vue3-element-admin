# 应用配置
NODE_ENV=development
PORT=3000
APP_NAME=Vue3 Element Admin Backend
APP_VERSION=1.0.0
APP_DESCRIPTION=Vue3 Element Admin Backend API

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/vue3-admin
DB_HOST=localhost
DB_PORT=27017
DB_NAME=vue3_admin
DB_CONNECTION_TIMEOUT=30000

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ACCESS_EXPIRY=15m
JWT_ALGORITHM=HS256

# CORS配置
CORS_ORIGIN=http://localhost:5173,http://localhost:8001
CORS_CREDENTIALS=true

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=15 minutes
RATE_LIMIT_MAX=100

# 日志配置
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# 文件上传配置
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 安全配置
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
MAX_REQUEST_SIZE=1048576

# 新增安全配置
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=86400000

# IP白名单和黑名单（可选）
# IP_WHITELIST=127.0.0.1,192.168.1.0/24
# IP_BLACKLIST=192.168.1.100

# 默认管理员账户配置
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123456

# 默认角色配置
DEFAULT_USER_ROLE=user
DEFAULT_ADMIN_ROLE=admin
DEFAULT_MODERATOR_ROLE=moderator

# 角色权限配置
ADMIN_PERMISSIONS=all
USER_PERMISSIONS=read,update_profile
MODERATOR_PERMISSIONS=read,write,update,delete_user

# Redis配置（可选）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# 邮件配置（可选）
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-email-password

# 系统配置
SYSTEM_NAME=Vue3 Element Admin
SYSTEM_VERSION=1.0.0
SYSTEM_DESCRIPTION=Vue3 Element Admin Backend System

# API配置
API_PREFIX=/api
API_VERSION=v1

# 分页配置
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=vue3_admin

# 文件存储配置
STORAGE_TYPE=local
STORAGE_PATH=uploads
STORAGE_BASE_URL=http://localhost:3000/uploads