# 测试环境配置
NODE_ENV=test
PORT=3001
APP_NAME=Vue3 Element Admin Backend Test
APP_VERSION=1.0.0
APP_DESCRIPTION=Vue3 Element Admin Backend API Test

# 内存数据库配置
MONGODB_URI=mongodb://localhost:27017/vue3-admin-test
MONGODB_TEST_URI=mongodb://localhost:27017/vue3-admin-test
DB_HOST=localhost
DB_PORT=27017
DB_NAME=vue3_admin_test
DB_CONNECTION_TIMEOUT=30000

# JWT配置
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ACCESS_EXPIRY=15m
JWT_ALGORITHM=HS256

# CORS配置
CORS_ORIGIN=http://localhost:5173,http://localhost:8001
CORS_CREDENTIALS=true

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW=15 minutes
RATE_LIMIT_MAX=1000

# 日志配置
LOG_LEVEL=error
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# 文件上传配置
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=uploads-test
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 安全配置
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=test-session-secret
MAX_REQUEST_SIZE=1048576

# 新增安全配置
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=86400000

# 默认管理员账户配置
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123456

# 默认角色配置
DEFAULT_USER_ROLE=user
DEFAULT_ADMIN_ROLE=admin
DEFAULT_MODERATOR_ROLE=moderator

# 角色权限配置
ADMIN_PERMISSIONS=all
USER_PERMISSIONS=read,update_profile
MODERATOR_PERMISSIONS=read,write,update,delete_user

# 系统配置
SYSTEM_NAME=Vue3 Element Admin Test
SYSTEM_VERSION=1.0.0
SYSTEM_DESCRIPTION=Vue3 Element Admin Backend System Test

# API配置
API_PREFIX=/api
API_VERSION=v1

# 分页配置
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=vue3_admin_test

# 文件存储配置
STORAGE_TYPE=local
STORAGE_PATH=uploads-test
STORAGE_BASE_URL=http://localhost:3001/uploads-test